
<div class="create_strategy_info row">

  <div class="strategy_info_form col-sm-7">

    <%= form_with(url: golfclub_strategy_infos_path, remote: true) do |f| %>
      <%# ユーザーid %>
      <%= f.hidden_field :user_id, value: current_user.id, class: "form-control" %>
      コース名:
      <%= f.select :course_id, @course_options, class: "form-control" %>
      Hole No:
      <%= f.select :hole_id, @hole_options, class: "form-control" %>
      shot:
      <%# <%= f.label :shot_id, class: "label-#{yield(:class_text)}" %>
      <%= f.select :shot_id, StrategyInfo.shot_ids.keys, class: "form-control" %>
      <%# ティグラウンド %>
      <%# <br> %>
      <%= f.select :location_name, StrategyInfo.location_names.keys, selected: @location_name, class: "form-control" %>
      <br>
      <%# 画像up %>
      <div id="strategy_photo">
        <div id="photo_area">
          <%= image_tag "", id: "photo_prev", class: "strategy_img" %>
        </div>
        <%# <div class="upload-btn-wrapper">
          <button class="upload-btn">画像選択</button>
          < %= f.file_field :photo, accept: 'image/jpeg,image/gif,image/png', onChange:'inform()' % >
          <h3 id="file_name"></h3>
        </div> %>
        <div class="photo_pin">
          <img src="/strategy_infos/pin/target_lpc.png" id="photo_pin_target", class="pin js-image-switch">
          <img src="/strategy_infos/pin/point_lpc.png" id="photo_pin_point", class="pin js-image-switch">
        </div>
      </div>
      <%= f.file_field :photo, required: true, id: "f_strategy_photo", class: "form-control-file", accept: "image/png, image/jpg, image/jpeg" %><br>
      <%# --------------------- %>
      <%= f.label :コメント, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :comment, class: "form-control" %>
      <%# location_name %>
      <%= f.hidden_field :location_name, value: "R", id: "hidden_location", class: "form-control" %>
      <%# photoピン座標 %>
      <%= f.hidden_field :photo_target_x, value: "0", class: "form-control" %>
      <%= f.hidden_field :photo_target_y, value: "0", class: "form-control" %>
      <%= f.hidden_field :photo_point_x, value: "0", class: "form-control" %>
      <%= f.hidden_field :photo_point_y, value: "0", class: "form-control" %>
      <%# photoサイズ %>
      <%= f.hidden_field :photo_size_x, value: "0", id: 'photo_size_x', class: "form-control" %>
      <%= f.hidden_field :photo_size_y, value: "0", id: 'photo_size_y', class: "form-control" %>
      <%# mapピン座標 %>
      <%= f.hidden_field :map_target_x, value: "0", class: "form-control" %>
      <%= f.hidden_field :map_target_y, value: "0", class: "form-control" %>
      <%= f.hidden_field :map_point_x, value: "0", class: "form-control" %>
      <%= f.hidden_field :map_point_y, value: "0", class: "form-control" %>
      <%= f.hidden_field :map_shoot_x, value: "0", class: "form-control" %>
      <%= f.hidden_field :map_shoot_y, value: "0", class: "form-control" %>
      <%# mapサイズ %>
      <%= f.hidden_field :map_size_x, value: "0", id: 'map_size_x', class: "form-control" %>
      <%= f.hidden_field :map_size_y, value: "0", id: 'map_size_y', class: "form-control" %>
      <br>
      <%= f.submit "攻略情報登録", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>

  <div class=" col-sm-1">
    
  </div>

  <div id="strategy_map" class=" col-sm-3">
    <div class="map_area">
      <%# < %= render 'strategy_infos/form_map', hole: @hole % > %>
      <% if @location_name.blank? || @location_name == "R" %>
        <%= image_tag @hole.map_r.variant(resize:'108x386'), class: "img-fluid strategy_img regedit_map" %>
      <% elsif @location_name == "B" %>
        <%= image_tag @hole.map_b.variant(resize:'108x386'), class: "img-fluid strategy_img regedit_map" %>
      <% else %>
        <%= image_tag @hole.map_l.variant(resize:'108x386'), class: "img-fluid strategy_img regedit_map" %>
      <% end %>
    </div>
    <div class="map_pin">
      <img src="/strategy_infos/pin/target_lpc.png" id="map_pin_target", class="pin js-image-switch">
      <img src="/strategy_infos/pin/point_lpc.png" id="map_pin_point", class="pin js-image-switch">
      <img src="/strategy_infos/pin/shoot_lpc.png" id="map_pin_shoot", class="pin js-image-switch">
    </div>

    <div class="pins_description">
      <ul>
        <li>
          <img src="/strategy_infos/pin/target_lpc.png" id="map_pin_target", class="js-image-switch">
          狙い目
        </li>
        <li>
          <img src="/strategy_infos/pin/point_lpc.png" id="map_pin_point", class="js-image-switch">
          目印
        </li>
        <li>
          <img src="/strategy_infos/pin/shoot_lpc.png" id="map_pin_shoot", class="js-image-switch">
          撮影地点
        </li>
      </ul>
    </div>
  </div>

</div>